<div class="jumbotron">
  <div class="container">
    <h1>Welcome to My Apnea!</h1>
    <p>Take a <%= link_to 'tour', '' %> of our website. </p>
  </div>
</div>
<div class="container">
  <div id="highlights" class="row">
    <div class="col-lg-6">
      <div id="reason-carousel" class="carousel slide">
        <ol class="carousel-indicators">
          <li data-target="#reason-carousel" data-slide-to="0" class="active"></li>
          <li data-target="#reason-carousel" data-slide-to="1" class=""></li>
          <li data-target="#reason-carousel" data-slide-to="2" class=""></li>
          <li data-target="#reason-carousel" data-slide-to="3" class=""></li>
          <li data-target="#reason-carousel" data-slide-to="4" class=""></li>
        </ol>

        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag "reasons/1.jpg", class: "img-rounded" %>
            <div class="carousel-caption">
              <h3>First slide label</h3>
              <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
            </div>
          </div>
          <div class="item">
            <%= image_tag "reasons/2.jpg" %>
            <div class="carousel-caption">
              <h3>Second slide label</h3>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
          </div>
          <div class="item">
            <%= image_tag "reasons/3.jpg" %>
            <div class="carousel-caption">
              <h3>Third slide label</h3>
              <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
          </div>
          <div class="item">
            <%= image_tag "reasons/4.jpg" %>
            <div class="carousel-caption">
              <h3>Fourth slide label</h3>
              <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
          </div>
          <div class="item">
            <%= image_tag "reasons/5.jpg" %>
            <div class="carousel-caption">
              <h3>Fifth slide label</h3>
              <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
          </div>
        </div>
        <a class="left carousel-control" href="#reason-carousel" data-slide="prev">
          <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#reason-carousel" data-slide="next">
          <span class="icon-next"></span>
        </a>
      </div>


    </div>
    <div id="join-us" class="col-lg-6 link">
      <div class="panel panel-default">
        <div class="panel-heading">Tell us a bit about yourself</div>
        <div class="panel-body">
          <%= form_tag nil, {class: 'form-horizontal', role: 'form'} do %>
              <div class="form-group">
                <%= label_tag :first_name, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= text_field_tag :first_name, nil, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :last_name, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= text_field_tag :last_name, nil, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :email, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= email_field_tag :email, nil, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :email_confirmation, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= email_field_tag :email_confirmation, nil, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :password, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= password_field_tag :password, nil, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :password_confirmation, nil, class: 'col-lg-4 control-label' %>
                <div class="col-lg-8">
                  <%= password_field_tag :password_confirmation, nil, class: 'form-control' %>
                </div>
              </div>


              <div class="form-group">
                <%= submit_tag "Sign up", class: 'btn btn-primary btn-block' %>
              </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <h4>Many benefits for you</h4>
    </div>
    <div class="col-lg-4">
      <h4>Valuable research</h4>

    </div>
    <div class="col-lg-4">
      <h4>Be a part of our patient-centered community</h4>
    </div>


  </div>
</div>