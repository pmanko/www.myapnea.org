<div id="team">
<div class="row">
  <div class="col-md-9">
    <section id="top">
      <div class="page-header">
        <h1 id="myapnea"><%= @pc['myapnea']['title'] %></h1>
      </div>

      <div class="section-content" id="myapnea-overview">
        <%= markdown @pc['myapnea']['content'] %>
      </div>
    </section>

    <section>
      <h1 class="page-header" id="sapcon"><%= @pc['sapcon']['title'] %></h1>
      <div class="section-content" id="sapcon-overview">
        <%= markdown @pc['sapcon']['content'] %>
      </div>
    </section>

    <section>
      <h1 class="page-header" id="steering"><%= @pc['steering_title'] %></h1>

      <% @pc['steering'].each do |person| %>
        <div class="section-content" id="steering-<%= person['name'].parameterize %>">

          <div class="row">
            <div class="col-md-3">
              <div class="thumbnail">
                <%= image_tag "pages/team/#{person['image']}" %>
              </div>
            </div>
            <div class="col-md-9">
              <h4><%= person['name'] %><%= ", #{person['titles'] if person['titles'].present? }" %> â€“ <%= person['role'] %> </h4>
              <%= markdown person['description'] %>
            </div>
          </div>
        </div>
      <% end %>
    </section>

    <section>
      <h1 class="page-header" id="partners"><%= @pc['partners_title'] %></h1>
      <% @pc['partners'].each do |partner| %>
        <div class="section-content" id="partners-<%= partner['name'].parameterize %>">
          <h2><%= partner['name'] %></h2>
          <a href="<%= partner['link'] %>"><%= partner['link'] %></a>
          <div>
            <%= markdown partner['description'] %>
          </div>
        </div>
      <% end %>
    </section>

  </div>
  <div class="col-md-3">

    <div class="myapnea-sidebar hidden-print affix-top" role="complementary">
      <ul class="nav myapnea-sidenav">

        <li class="">
          <a href="#myapnea"><%= @pc['myapnea']['title'] %></a>
          <ul class="nav">
            <li><a href="#myapnea-overview"><%= @pc['overview'] %></a></li>
          </ul>
        </li>
        <li class="">
          <a href="#sapcon"><%= @pc['sapcon']['title'] %></a>
          <ul class="nav">
            <li><a href="#sapcon-overview"><%= @pc['overview'] %></a></li>
          </ul>
        </li>
        <li class="">
          <a href="#steering"><%= @pc['steering_menu'] %></a>
          <ul class="nav">
            <% @pc['steering'].each do |person| %>
              <li><a href="#steering-<%= person['name'].parameterize %>"><%= person['name'] %></a></li>
            <% end %>
          </ul>
        </li>
        <li class="">
          <a href="#partners"><%= @pc['partners_title'] %></a>
          <ul class="nav">
            <% @pc['partners'].each do |partner| %>
              <li><a href="#partners-<%= partner['name'].parameterize %>"><%= partner['name'] %></a></li>
            <% end %>
          </ul>
        </li>


      </ul>



      <a class="back-to-top" href="#top">
        <%= @pc['back_to_top'] %>
      </a>
    </div>

  </div>
</div>
</div>

<%= render partial: 'layouts/join_bottom' %>
