<div class="panel panel-default">
  <div class="panel-heading">Tell us a bit about yourself =)</div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }, remote: true) do |f| %>
      <%= display_errors(resource) %>

      <div class="form-group">
        <%= f.label :first_name, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email_confirmation, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.email_field :email_confirmation, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-lg-4 control-label' %>
        <div class="col-lg-8">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>


      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

  </div>
</div>
