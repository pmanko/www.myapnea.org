<div id="registration" class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4"><h2>Sign up</h2></div>
      <div class="col-md-8"><p class="pull-right">Already a member? <%= link_to "Sign in!", new_session_path(:user) %></p></div>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {}) do |f| %>
        <div class='form-group'><%= f.text_field :first_name, class: 'form-control input-lg', placeholder: "First Name" %></div>
        <div class='form-group'><%= f.text_field :last_name, class: 'form-control input-lg', placeholder: "Last Name" %></div>
        <div class='form-group'><%= f.text_field :email, class: 'form-control input-lg', placeholder: "Email" %></div>
        <div class='form-group'><%= f.password_field :password, class: 'form-control input-lg', placeholder: "Password" %></div>
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>