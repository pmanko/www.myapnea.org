<div class="row">
  <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-primary" id="pledge">
        <div class="panel-heading">
          <h2><%= @pc['heading'] %></h2>
          <p><%= @pc['subheading'] %></p>
        </div>
        <div id="pledge" class="panel-body">
          <div class="row">
            <div class="col-md-6">
              <h3 class="center-block"><%= @pc['you_promise'] %></h3>
              <div class="list-group">
                <% @pc['your_promises'].each do |promise| %>
                  <div class="list-group-item">
                    <h4><%= promise['title'] %></h4>
                    <p><%= promise['description'] %></p>
                  </div>
                 <% end %>
              </div>
            </div>
            <div class="col-md-6">
              <h3 class="center-block"><%= @pc['we_promise'] %></h3>
              <div class="list-group">
                <% @pc['our_promises'].each do |promise| %>
                  <div class="list-group-item">
                    <h4><%= promise['title'] %></h4>
                    <p><%= promise['description'] %></p>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
          <div class="text-center">
            <%= form_tag pledge_path do  %>
              <input name="pledge_signed" type="submit" value="<%= @pc['accept'] %>" class="btn btn-primary btn-lg" />
              <%= link_to @pc['decline'], faqs_path, class: 'btn btn-default btn-lg' %>
            <% end %>
          </div>
        </div>
      </div>
  </div>

</div>
