$('link[rel=stylesheet][href*="<%= @old %>"]').prop('disabled', true).remove();
$('head').append('<%= stylesheet_link_tag @new, media: 'all', 'data-turbolinks-track' => true %>');

<% if @old =~ /day/ %>
  $('#theme-switcher').html('<%= link_to(switch_theme_path(@old), remote: true) { '<i class="fa fa-sun-o"></i>'.html_safe }  %>');
<% else %>
  $('#theme-switcher').html('<%= link_to(switch_theme_path(@old), remote: true) { '<i class="fa fa-moon-o"></i>'.html_safe }  %>');
<% end %>
