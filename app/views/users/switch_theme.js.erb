$('link[rel=stylesheet][href*="<%= @old %>"]').prop('disabled', true).remove();
$('head').append('<%= stylesheet_link_tag @new, media: 'all', 'data-turbolinks-track' => true %>');

var new_path = '<%= switch_theme_path(theme: @old, format: :js) %>';
<% if @old =~ /day/ %>
var new_icon = 'fa-sun-o';
<% else %>
var new_icon = 'fa-moon-o';
<% end %>

$('#theme-switcher a').attr('href', new_path);
$('#theme-switcher i').removeClass().addClass("fa").addClass(new_icon);
