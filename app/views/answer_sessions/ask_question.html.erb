<div id="answer-session">

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @answer_session.question_flow.name %></h3>
          <%= render partial: 'session_progress' %>
        </div>
        <div class="panel-body">
          <%= render partial: 'question_form' %>
        </div>
        <div class="panel-footer">
          <%= link_to "Previous Question", nil, class: 'btn btn-default btn-lg' %>
          <%= link_to "Next Question", nil, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>
