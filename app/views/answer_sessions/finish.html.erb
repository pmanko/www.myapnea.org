<div class="page-header">
  <h1><%= @question_flow.name %></h1>
</div>

<% @question_flow.all_questions.each do |question| %>
  <% if question.user_answer(@answer_session) %>
    <div class="row send-request">
      <div class="col-md-3">
        <%= markdown question.text %>
      </div>
      <div class="col-md-3">
        <p><%= question.user_answer(@answer_session).value %> <%= question.unit.name if question.unit.present? %></p>
      </div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-6">
            <table class="table table-bordered table-condensed">
              <thead>
                <tr>
                  <th>Answer</th>
                  <th>Frequency</th>
                </tr>
              </thead>
              <tbody>
                <% question.answer_frequencies.each_pair do |k,v| %>
                  <tr>
                    <td><%= truncate(k.to_s, length: 40) %></td>
                    <td><%= ((v.to_f/question.answers.length.to_f) * 100).round %>%</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6"><div id="visualize_<%= question.id %>"></div></div>
        </div>

      </div>
    </div>
  <% end %>
<% end %>