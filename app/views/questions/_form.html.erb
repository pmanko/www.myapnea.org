<%= form_for(@question, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= label_tag :label, nil, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :label, nil, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :explanation, nil, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :explanation, nil, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :question_type_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :question_type_id, QuestionType.all, :id, :name, {prompt: true}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag "Validations", nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <select class="form-control">
        <option>coming soon</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag "Default Value", nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="Coming Soon">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
